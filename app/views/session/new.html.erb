<h3>Login</h3>
<%= form_for log_in_path do |f| %>
	<div class="row">
		<div class="large-12 columns">
			<%= f.label :username %>
			<%= f.text_field :username %>
		</div>

		<div class="large-12 columns">
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div>

		<div class="large-12 columns">
			<%= f.submit :Login, :class => "button small" %>
		</div>
	</div>
<% end %>